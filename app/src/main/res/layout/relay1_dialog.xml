<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:columnCount="2"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:padding="30dp"
    android:rowCount="4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/r1d_single_shot_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="10dp"
        app:sparkbutton_activeImage="@drawable/ic_check_active_50dp"
        app:sparkbutton_iconSize="40dp"
        app:sparkbutton_inActiveImage="@drawable/ic_check_inactive_50dp"
        app:sparkbutton_primaryColor="@color/colorAccent"
        app:sparkbutton_secondaryColor="@color/white_color" />

    <TextView
        android:id="@+id/r1d_single_shot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:text="حالت تک تیر" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/r1d_multi_shot_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="10dp"
        app:sparkbutton_activeImage="@drawable/ic_check_active_50dp"
        app:sparkbutton_iconSize="40dp"
        app:sparkbutton_inActiveImage="@drawable/ic_check_inactive_50dp"
        app:sparkbutton_primaryColor="@color/colorAccent"
        app:sparkbutton_secondaryColor="@color/white_color" />

    <TextView
        android:id="@+id/r1d_multi_shot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:text="حالت رگبار" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/r1d_switch_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp"
        app:sparkbutton_activeImage="@drawable/ic_check_active_50dp"
        app:sparkbutton_iconSize="40dp"
        app:sparkbutton_inActiveImage="@drawable/ic_check_inactive_50dp"
        app:sparkbutton_primaryColor="@color/colorAccent"
        app:sparkbutton_secondaryColor="@color/white_color" />

    <TextView
        android:id="@+id/r1d_switch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:text="حالت سوییچ" />

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/r1d_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:layout_column="0"
        android:layout_row="3"
        app:nb_backgroundColor="@color/colorAccent"
        app:nb_borderColor="@color/white_color"
        app:nb_borderWidth="2dp"
        app:nb_focusColor="@color/grey_30"
        app:nb_radius="10dp"
        app:nb_text="@string/dialog_btn_save"
        app:nb_textColor="@color/white_color"
        app:nb_textSize="20sp" />

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/r1d_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:layout_column="1"
        android:layout_row="3"
        app:nb_backgroundColor="@color/red_color"
        app:nb_borderColor="@color/white_color"
        app:nb_borderWidth="2dp"
        app:nb_focusColor="@color/grey_30"
        app:nb_radius="10dp"
        app:nb_text="@string/dialog_btn_cancel"
        app:nb_textColor="@color/white_color"
        app:nb_textSize="20sp" />

</GridLayout>